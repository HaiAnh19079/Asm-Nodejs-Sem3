<section class="section__breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h4 class="breadcrumb-title">
                    Home
                </h4>
                <div class="breadcrumb__links">
                    <a href="#">User
                        <!-- <i class="fas fa-chevron-right"></i> -->
                    </a>
                    <span>Shopping Cart</span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="shopping-cart space">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping-cart-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#if session.cart}}
                            {{#each products}}
                            <tr>
                                <td class="cart__item">
                                    <div class="cart__item__pic">
                                        <img src="{{this.item.images.[0].url}}" alt="">
                                    </div>
                                    <div class="cart__item__text">
                                        <h6>{{this.item.name}}</h6>
                                        <h5>${{this.item.price}}</h5>
                                        <div class="form-group d-flex select-option-edit">
                                            <select class="form-control" id="size" name="size">
                                                <option value="{{this.size}}" selected="selected">Size {{this.size}}</option>
                                                {{#each this.item.sizes}}
                                                <option value="{{this}}" >Size {{this}}</option>   
                                                {{/each}}
                                            </select>
                                            <select class="form-control" id="color" name="color">
                                                <option value="{{this.color}}" selected="selected">color {{this.color}}</option>
                                                {{#each this.item.colors}}
                                                <option value="{{this}}" >Color {{this}}</option>   
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                </td>
                                <td class="cart__item__quantity">
                                    <div class="quantity-item">
                                        <div class="pro-qty-2">
                                            <span data-id="{{this.itemId}}" class="fa fa-angle-left dec qtybtn"></span>
                                            <input type="text" value="{{this.quantity}}">
                                            <span data-id="{{this.itemId}}" class="fa fa-angle-right inc qtybtn"></span>
                                        </div>
                                    </div>
                                </td>
                                <td class="cart__price">${{this.price}}</td>
                                <td class="cart__close"><i class="fas fa-times"></i></td>
                            </tr>
                            {{/each}}
                            {{else}}
                            <tr>
                                <td class="cart__item">
                                    <div class="cart__item__pic">
                                        <img src="data:image/webp;base64,"
                                            alt="">
                                    </div>
                                    <div class="cart__item__text">
                                        <h6>T-shirt Contrast Pocket</h6>
                                        <h5>$98.49</h5>
                                    </div>
                                </td>
                                <td class="cart__item__quantity">
                                    <div class="quantity-item">
                                        <div class="pro-qty-2">
                                            <span class="fa fa-angle-left dec qtybtn"></span>
                                            <input type="text" value="1">
                                            <span class="fa fa-angle-right inc qtybtn"></span>
                                        </div>
                                    </div>
                                </td>
                                <td class="cart__price">$ 30.00</td>
                                <td class="cart__close"><i class="fas fa-times"></i></td>
                            </tr>
                            <tr>
                                <td class="cart__item">
                                    <div class="cart__item__pic">
                                        <img src="data:image/webp;base64,"
                                            alt="">
                                    </div>
                                    <div class="cart__item__text">
                                        <h6>Diagonal Textured Cap</h6>
                                        <h5>$98.49</h5>
                                    </div>
                                </td>
                                <td class="cart__item__quantity">
                                    <div class="quantity-item">
                                        <div class="pro-qty-2">
                                            <span class="fa fa-angle-left dec qtybtn"></span>
                                            <input type="text" value="1">
                                            <span class="fa fa-angle-right inc qtybtn"></span>
                                        </div>
                                    </div>
                                </td>
                                <td class="cart__price">$ 32.50</td>
                                <td class="cart__close"><i class="fas fa-times"></i></td>
                            </tr>
                            <div>Your Cart Is not product! </div>
                            {{/if}}

                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="continue-btn">
                            <a href="#" class="continue-link">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="continue-btn float-right">

                            <a href="#" class="continue-link"><i class="fas fa-spinner"></i>Update Cart</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart-total">
                    <h6>Cart Total</h6>
                    <div class="total-list">
                        <div class="sub-total">Subtotal
                            <span>${{cartTotalPrice}}</span>
                        </div>
                        <div class="total">ToTal
                            <span>${{cartTotalPrice}}</span>
                        </div>
                    </div>
                    <div class="checkout-btn">Proceed To Checkout</div>
                </div>
            </div>

        </div>
    </div>
</section>