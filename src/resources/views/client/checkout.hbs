<section class="section__breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h4 class="breadcrumb-title">
                    Shopping Cart
                </h4>
                <div class="breadcrumb__links">
                    <a href="#">User
                        <!-- <i class="fas fa-chevron-right"></i> -->
                    </a>
                    <span>Checkout</span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="checkout-form space">
    <div class="container">
        <form action="/cart/checkout" class="form-checkout" method="POST">

            <div class="form-group">
                <label for="email" class="label-input-checkout">Email address</label>
                <input type="email" class="form-control form-control-lg" id="email" value="{{user.email}}" required="required"
                    placeholder="Enter email" name="email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="address" class="label-input-checkout">Address</label>
                <input type="text" class="form-control form-control-lg" id="address" required="required" placeholder="Enter address"
                    name="address">
            </div>
            <div class="form-group">
                <label for="phoneNumber" class="label-input-checkout">Phone Number</label>
                <input type="text" class="form-control form-control-lg" id="phoneNumber" required="required"
                    placeholder="Enter phoneNumber" name="phoneNumber">
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <div class="shopping-cart-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#if cart}}
                                {{#each products}}
                                <tr>
                                    <td class="cart__item">
                                        <div class="cart__item__pic">
                                            <img src="{{this.item.images.[0].url}}" alt="">
                                        </div>
                                        <div class="cart__item__text">
                                            <h6>{{this.item.name}}</h6>
                                            <h5>${{this.item.price}}</h5>
                                            <div class="form-group d-flex select-option-edit">
                                                <p class="size-select "
                                                    style="width:40%;font-size:14px;font-weight:bold">Size:
                                                    {{this.size}}</p>
                                                <p class="size-select"
                                                    style="width:40%;font-size:14px;font-weight:bold">Color:
                                                    {{this.color}}</p>

                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__item__quantity">
                                        <div class="quantity-item">
                                            <div class="pro-qty-2">

                                                <input type="text" readonly value="{{this.quantity}}">

                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__price">${{this.price}}</td>
                                    <td class="cart__close js-cart-remove-item">

                                    </td>
                                </tr>
                                {{/each}}
                                {{/if}}
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="continue-btn">
                                <a href="/cart" class="continue-link">Continue Shopping</a>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="cart-total">
                        <h6>Cart Total</h6>
                        <div class="total-list">
                            <div class="sub-total">Subtotal
                                <span>${{cart.totalPrice}}</span>
                            </div>
                            <div class="total">ToTal
                                <span>${{cart.totalPrice}}</span>
                            </div>
                        </div>
                        <button type="submit" class="checkout-btn js-checkout-btn" style="width:100%;">Purchase</button>
                    </div>
                </div>
            </div>

            {{!-- <button type="submit" class="btn btn-primary">Purchase</button> --}}
        </form>
    </div>
</section>