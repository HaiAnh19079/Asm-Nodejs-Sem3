            <!-- Card stats -->
            <div class="row">

                <div class="col-12">
                    <div class="card card-stats">
                        <!-- Card body -->
                        <div class="card-body">
                            <div class="row">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Price</th>
                                            <th scope="col"> </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each products}}
                                        <tr >
                                            <th scope="row">{{sum @index 1}}</th>
                                            <td  >
                                                <div class="d-flex align-items-center">
                                                    {{this.name}}
                                                </div>
                                            </td>
                                            <td><img src="{{this.image}}" alt="{{this.name}}"
                                                    style="min-width:54px;height:49px;"></td>
                                            <td>${{this.price}}</td>
                                            <td>
                                                <a href="/admin/{{this._id}}/edit" class="btn btn-link px-3">Sá»­a</a>
                                            </td>
                                        </tr>
                                        {{/each }}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>




