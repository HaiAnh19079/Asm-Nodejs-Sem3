<div class="body-content">

    <div class="container mt-5">
        <form action="/admin/create" method="POST" enctype="multipart/form-data">
            <div class="row">
                {{!-- Upload img --}}
                <div class="col-3">
                    <div class="form-group">

                        <div class="avatar-upload">
                            <div class="title text-center">Image</div>
                            <div class="avatar-edit">
                                <input type='file' id="imageUpload" accept=".png, .jpg, .jpeg" name="images" />
                                <label for="imageUpload"><i class="fas fa-pencil-alt"></i></label>
                            </div>
                            <div class="avatar-preview">
                                <div id="imagePreview" style="background-image: url(http://i.pravatar.cc/500?img=7);">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- info product --}}
                <div class="col-9">
                    <a href="/admin">Về danh sách sản phẩm</a>
                    <div class="form-content">
                        <div class="sections">
                            <div class="section-title">
                                <h4 class="text">Thông tin cơ bản</h4>
                                <hr>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group position-relative">
                                            <label for="name">Name</label>
                                            <input type="text" class="form-control input" id="name" placeholder="name" name="name" />
                                        </div>
                                        <div class="form-group position-relative">
                                            <label for="price">Price</label>
                                            <input type="text" class="form-control" id="price" placeholder="price" name="price" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group position-relative">
                                            <label for="category">Category</label>
                                            <select class="form-control select2-multiple-category" name="category" id="category">
                                                <option data-value="clothes" class="tab-item active" value='clothes' >Clothes </option>
                                                <option data-value="shoes" class="tab-item" value='shoes'>Shoes</option>
                                                <option data-value="bag" class="tab-item" value='bag'>Bags</option>
                                                <option data-value="watches" class="tab-item" value='watches'>Watches</option>
                                            </select>
                                        </div>
                                        <div class="form-group position-relative">
                                            <label for="gender" class="labelGender">Gender</label>
                                            <select class="form-control select2-multiple-gender" style="width: 100%;"
                                                name="gender" id="gender" multiple="multiple" placeholder="gender">
                                                <option value='male'>Male</option>
                                                <option value='female'>Female</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="sections">
                            <div class="section-title">
                                <h4 class="text">Thông tin chi tiết</h4>
                                <hr>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="">
                                            {{!-- Tab Content --}}
                                            <div class="tab-pane active" data-content="clothes">
                                                <div class="form-group position-relative">
                                                    <label for="select2Size" class="sizeLabel" data-content="size">Size
                                                        Clothes</label>
                                                    <select class="form-control select2-multiple-size " id="select2Size"
                                                        multiple="multiple" name="size">
                                                        <option value='X'>X</option>
                                                        <option value='XL'>XL</option>
                                                        <option value='M'>M</option>
                                                    </select>

                                                </div>
                                            </div>
                                            <div class="tab-pane" data-content="shoes">
                                                <div class="form-group position-relative">
                                                    <label for="size">Size Shoes</label>
                                                    <select class="form-control select2-multiple-size" name="size"
                                                        multiple="multiple">
                                                        <option value='40'>40</option>
                                                        <option value='41'>41</option>
                                                        <option value='42'>42</option>
                                                    </select>

                                                </div>
                                            </div>
                                            <div class="tab-pane" data-content="bag">
                                                <div class="form-group position-relative">
                                                    <label for="size">Size Bag</label>
                                                    <select class="form-control select2-multiple-size" name="size"
                                                        multiple="multiple">
                                                        <option value='X'>X</option>
                                                        <option value='XL'>XL</option>
                                                        <option value='M'>M</option>
                                                    </select>

                                                </div>
                                            </div>
                                            <div class="tab-pane" data-content="watches">
                                                <div class="form-group position-relative">
                                                    <label for="size">Size Watches</label>
                                                    <select class="form-control select2-multiple-size" name="size"
                                                        multiple="multiple">
                                                        <option value='X'>X</option>
                                                        <option value='XL'>XL</option>
                                                        <option value='Regular'>Regular</option>
                                                    </select>

                                                </div>
                                            </div>
                                        </div>
                                        {{!-- End Tab Content --}}
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group position-relative">
                                            <label for="color">Color</label>
                                            <select class="form-control select2-multiple-color" name="color"
                                                multiple="multiple">
                                                <option value='black'>Black</option>
                                                <option value='blue'>Blue</option>
                                                <option value='red'>Red</option>
                                                <option value='green'>Green</option>
                                                <option value='white'>White</option>
                                            </select>

                                        </div>
                                    </div>
                                </div>
                                <div class="form-group position-relative">
                                    <label for="description">Description</label>
                                    <textarea type="text" class="form-control" id="description"
                                        placeholder="description" name="description"></textarea>

                                </div>
                            </div>
                        </div>
                        <button type="submit" id="create-submit" class="btn btn-primary">Submit</button>

                    </div>
                </div>
            </div>

        </form>

    </div>



</div>

</div>

<div class="pb-150">

</div>