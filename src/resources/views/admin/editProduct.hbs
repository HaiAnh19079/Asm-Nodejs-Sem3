<div class="body-content">

    <div class="container mt-5">
        <form method="POST" action="/admin/{{product._id}}?_method=PUT" enctype="multipart/form-data">
            <div class="row">
                {{!-- Upload img --}}
                <div class="col-3">
                    {{!-- Image Upload --}}
                    <div class="form-group">
                        <div class="avatar-upload">
                            <div class="title text-center">Image</div>
                            <div class="avatar-edit">
                                <input type='file' id="imageUpload" accept=".png, .jpg, .jpeg" name="imageupdate"
                                    value="{{product.image}}" />
                                <label for="imageUpload"><i class="fas fa-pencil-alt"></i></label>
                            </div>
                            <div class="avatar-preview">
                                <img id="imagePreview" src="{{product.image}}">
                                </img>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- info product --}}
                <div class="col-9">
                    <a href="/admin">Về danh sách sản phẩm</a>
                    <div class="form-content">
                        <div class="sections">
                            <div class="section-title">
                                <h4 class="text">Thông tin cơ bản</h4>
                                <hr>
                                <div class="row">
                                    <div class="col-6">
                                        {{!-- Name --}}
                                        <div class="form-group position-relative">
                                            <label for="name">Name</label>
                                            <input type="text" class="form-control input" id="name" placeholder="name"
                                                name="name" value="{{product.name}}" />
                                        </div>
                                        <div class="form-group position-relative">
                                            <label for="price">Price</label>
                                            <input type="text" class="form-control" id="price" placeholder="price"
                                                name="price" value="{{product.price}}" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        {{!-- Category --}}
                                        <div class="form-group position-relative">
                                            <label for="category">Category</label>
                                            <select class="form-control select2-multiple-category" name="category"
                                                id="category">
                                                {{#if product.category}}
                                                <option data-value="{{product.category}}" class="tab-item active"
                                                    value='{{product.category}}'>
                                                    {{product.category}}</option>
                                                {{/if}}
                                                {{#each categoryNotSelected}}
                                                <option data-value="{{this}}" class="tab-item" value='{{this}}'>
                                                    {{this}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        {{!-- Gender --}}
                                        <div class="form-group position-relative">
                                            <label for="gender" class="labelGender">Gender</label>
                                            <select class="form-control select2-multiple-gender" style="width: 100%;"
                                                name="gender" id="gender" multiple="multiple" placeholder="gender">
                                                {{#each genders }}
                                                <option value='{{this}}' selected="selected">{{this}}</option>
                                                {{/each}}
                                                {{#each genderNotSelected }}
                                                <option value='{{this}}'>{{this}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="sections">
                            <div class="section-title">
                                <h4 class="text">Thông tin chi tiết</h4>
                                <hr>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="">
                                            {{!-- Tab Content --}}
                                            {{#if sizeClothes}}
                                            <div class="tab-pane" data-content="clothes">
                                                <div class="form-group position-relative">
                                                    <label for="select2Size" class="sizeLabel">Size
                                                        Clothes</label>
                                                    <select class="form-control select2-multiple-size " id="select2Size"
                                                        multiple="multiple" name="sizeClothes">
                                                        {{#each sizeClothes }}
                                                        <option value='{{this}}' selected="selected">{{this}}</option>
                                                        {{/each}}
                                                        {{#each sizeShoesNotSelected }}
                                                        <option value='{{this}}'>{{this}}</option>
                                                        {{/each}}

                                                    </select>
                                                </div>
                                            </div>
                                            {{else}}
                                            <div class="tab-pane" data-content="clothes">
                                                <div class="form-group position-relative">
                                                    <label for="select2Size" class="sizeLabel">Size
                                                        Clothes</label>
                                                    <select class="form-control select2-multiple-size " id="select2Size"
                                                        multiple="multiple" name="sizeClothes">
                                                        <option value='X'>X</option>
                                                        <option value='XL'>XL</option>
                                                        <option value='M'>M</option>
                                                    </select>
                                                </div>
                                            </div>
                                            {{/if}}
                                            {{!-- --}}
                                            {{#if sizeShoes}}
                                            <div class="tab-pane" data-content="shoes">
                                                <div class="form-group position-relative">
                                                    <label for="size">Size Shoes</label>
                                                    <select class="form-control select2-multiple-size" name="sizeShoes"
                                                        multiple="multiple">
                                                        {{#each sizeShoes }}
                                                        <option value='{{this}}' selected="selected">{{this}}</option>
                                                        {{/each}}
                                                        {{#each sizeShoesNotSelected }}
                                                        <option value='{{this}}'>{{this}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                            {{else}}
                                            <div class="tab-pane" data-content="shoes">
                                                <div class="form-group position-relative">
                                                    <label for="size">Size Shoes</label>
                                                    <select class="form-control select2-multiple-size" name="sizeShoes"
                                                        multiple="multiple">
                                                        <option value='40'>40</option>
                                                        <option value='41'>41</option>
                                                        <option value='42'>42</option>
                                                    </select>
                                                </div>
                                            </div>
                                            {{/if}}
                                            {{!-- --}}
                                            {{#if sizeBag}}
                                            <div class="tab-pane" data-content="bag">
                                                <div class="form-group position-relative">
                                                    <label for="size">Size Bag</label>
                                                    <select class="form-control select2-multiple-size" name="sizeBag"
                                                        multiple="multiple">
                                                        {{#each sizeBag }}
                                                        <option value='{{this}}' selected="selected">{{this}}</option>
                                                        {{/each}}
                                                        {{#each sizeBagNotSelected }}
                                                        <option value='{{this}}'>{{this}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                            {{else}}
                                            <div class="tab-pane" data-content="bag">
                                                <div class="form-group position-relative">
                                                    <label for="size">Size Bag</label>
                                                    <select class="form-control select2-multiple-size" name="sizeBag"
                                                        multiple="multiple">

                                                        <option value='X'>X</option>
                                                        <option value='XL'>XL</option>
                                                        <option value='M'>M</option>
                                                    </select>
                                                </div>
                                            </div>
                                            {{/if}}
                                            {{!-- --}}
                                            {{#if sizeWatches}}
                                            <div class="tab-pane" data-content="watches">
                                                <div class="form-group position-relative">
                                                    <label for="size">Size Watches</label>
                                                    <select class="form-control select2-multiple-size" name="sizeWatches"
                                                        multiple="multiple">
                                                        {{#each sizeWatches }}
                                                        <option value='{{this}}' selected="selected">{{this}}</option>
                                                        {{/each}}
                                                        {{#each sizeWatchesNotSelected }}
                                                        <option value='{{this}}'>{{this}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                            {{else}}
                                            <div class="tab-pane" data-content="watches">
                                                <div class="form-group position-relative">
                                                    <label for="size">Size Watches</label>
                                                    <select class="form-control select2-multiple-size" name="sizeWatches"
                                                        multiple="multiple">
                                                        <option value='X'>X</option>
                                                        <option value='XL'>XL</option>
                                                        <option value='Regular'>Regular</option>
                                                    </select>
                                                </div>
                                            </div>
                                            {{/if}}
                                        </div>
                                        {{!-- End Tab Content --}}
                                    </div>
                                    {{!-- Color --}}
                                    <div class="col-6">
                                        <div class="form-group position-relative">
                                            <label for="color">Color</label>
                                            <select class="form-control select2-multiple-color" name="color"
                                                multiple="multiple">
                                                {{#each colors }}
                                                <option value='{{this}}' selected="selected">{{this}}</option>
                                                {{/each}}
                                                {{#each colorNotSelected }}
                                                <option value='{{this}}'>{{this}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group position-relative">
                                    <label for="description">Description</label>
                                    <textarea type="text" class="form-control" id="description"
                                        placeholder="description" name="description">{{product.description}}</textarea>
                                </div>
                            </div>
                        </div>
                        <button type="submit" id="create-submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

</div>

<div class="pb-150">

</div>