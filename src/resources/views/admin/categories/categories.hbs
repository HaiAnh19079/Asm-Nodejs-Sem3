<!-- Header -->
<div class="header bg-primary pb-6 body-content">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Default</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Dashboards</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Default</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="/admin/category/new" class="btn btn-sm btn-neutral">New Category</a>
                </div>
            </div>
            <!-- Card stats -->
            <div class="row">

                <div class="col-12">
                    <div class="card card-stats">
                        <!-- Card body -->
                        <div class="card-body">
                            <div class="row">
                                {{#if categories includeZero=false}}
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Sizes</th>
                                            <th scope="col"> </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each categories}}
                                        <tr>
                                            <th scope="row">{{sum @index 1}}</th>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {{this.name}}
                                                </div>
                                            </td>
                                            <td>{{this.sizes}}</td>
                                            <td>
                                                <a href="/admin/{{this._id}}/edit" class="btn btn-link px-3">Sá»­a</a>
                                            </td>
                                        </tr>
                                        {{/each }}
                                    </tbody>
                                </table>
                                {{else}}
                                <div class="col-lg-12 text-center">No Category!!!</div>

                                {{/if}}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->